<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color">

    <LinearLayout
        android:id="@+id/blurrlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_170sdp"
            android:layout_height="@dimen/_170sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/premium_art" />

        <com.costar.talkwithidol.ext.widgets.fonts.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:text="This is Premium Content."
            android:textColor="@android:color/white"
            android:textSize="@dimen/_14sdp"
            app:typeface="ProximaNova-Regular.otf" />

        <com.costar.talkwithidol.ext.widgets.fonts.FontTextView

            android:id="@+id/tv_denied_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="3"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10sdp"
            app:typeface="ProximaNova-Regular.otf" />

        <com.costar.talkwithidol.ext.widgets.fonts.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center_horizontal"
            android:text="So, what are you waiting for? Get involved!"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_11sdp"
            app:typeface="ProximaNova-Regular.otf" />

        <com.costar.talkwithidol.ext.widgets.fonts.ProxiBoldButton
            android:id="@+id/btn_free_trial"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/activity_login_password"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/button_selector"
            android:enabled="true"
            android:textAllCaps="false"
            android:textColor="#ffffff"

            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <com.costar.talkwithidol.ext.widgets.fonts.ProxiBoldButton
            android:id="@+id/btn_subscribe_now"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/activity_login_password"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:background="@drawable/subscribe_button_selector"
            android:enabled="true"
            android:textAllCaps="false"
            android:textColor="#49CC67"
            android:textSize="@dimen/_12sdp"

            android:textStyle="bold" />

        <com.costar.talkwithidol.ext.widgets.fonts.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:gravity="center_horizontal"
            android:text="Subscribe now for immediate access!"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10sdp"
            app:typeface="ProximaNova-Regular.otf" />


    </LinearLayout>


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/ic_close"
        android:backgroundTint="#FFF"
        android:padding="@dimen/_10sdp" />
</RelativeLayout>
