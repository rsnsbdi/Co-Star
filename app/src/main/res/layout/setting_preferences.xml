<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_color"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.costar.talkwithidol.ext.widgets.fonts.MoonBoldTextView
                android:id="@+id/tv_email_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:text="WHAT CAN WE SEND YOU?"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="#FFE3E3E3"
                android:textSize="@dimen/_12sdp"
                app:typeface="MoonBold.otf" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1AFFFFFF" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15sdp">

            <com.costar.talkwithidol.ext.widgets.fonts.FontTextView
                android:id="@+id/label1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Special Offers"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14sdp"
                app:typeface="MoonLight.otf" />


            <com.costar.talkwithidol.ext.widgets.fonts.FontTextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label1"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_toLeftOf="@+id/switch1"
                android:layout_toStartOf="@+id/switch1"
                android:paddingRight="@dimen/_5sdp"
                android:text="Money can't buy premium experiences, partner offers and competitions!!!"
                android:textColor="#FF9B9B9B"
                android:textSize="@dimen/_9sdp"
                app:typeface="ProximaNova-Regular.otf" />


            <ToggleButton
                android:id="@+id/switch1"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/toggle_selector"
                android:checked="true"
                android:text=""
                android:textOff=""
                android:textOn="" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1AFFFFFF" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15sdp">

            <com.costar.talkwithidol.ext.widgets.fonts.FontTextView
                android:id="@+id/label2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What's on"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14sdp"
                app:typeface="MoonLight.otf" />


            <com.costar.talkwithidol.ext.widgets.fonts.FontTextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label2"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_toLeftOf="@+id/switch2"
                android:layout_toStartOf="@+id/switch2"
                android:paddingRight="@dimen/_5sdp"
                android:text="Our bi-monthly email newsletter. We're always innovating, we'll be adding channels, services and offering exclusive content. Be the first to know!"
                android:textColor="#FF9B9B9B"
                android:textSize="@dimen/_9sdp"
                app:typeface="ProximaNova-Regular.otf" />


            <ToggleButton
                android:id="@+id/switch2"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/toggle_selector"

                android:checked="true"
                android:text=""
                android:textOff=""
                android:textOn="" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1AFFFFFF" />

        <com.costar.talkwithidol.ext.widgets.fonts.MoonBoldTextView
            android:id="@+id/tv_event_notificaton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15sdp"
            android:text="ALERT SETTINGS"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#FFE3E3E3"
            android:textSize="@dimen/_12sdp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1AFFFFFF" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15sdp">

            <com.costar.talkwithidol.ext.widgets.fonts.FontTextView
                android:id="@+id/label3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Special Offers"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14sdp"
                app:typeface="MoonLight.otf" />


            <com.costar.talkwithidol.ext.widgets.fonts.FontTextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label3"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_toLeftOf="@+id/switch3"
                android:layout_toStartOf="@+id/switch3"
                android:paddingRight="@dimen/_5sdp"
                android:text="Money can't buy premium experiences, partner offers and competitions!!!"
                android:textColor="#FF9B9B9B"
                android:textSize="@dimen/_9sdp"
                app:typeface="ProximaNova-Regular.otf" />


            <ToggleButton
                android:id="@+id/switch3"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/toggle_selector"
                android:checked="true"
                android:text=""
                android:textOff=""
                android:textOn="" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1AFFFFFF" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15sdp">

            <com.costar.talkwithidol.ext.widgets.fonts.FontTextView
                android:id="@+id/label4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What's on"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14sdp"
                app:typeface="MoonLight.otf" />


            <com.costar.talkwithidol.ext.widgets.fonts.FontTextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label4"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_toLeftOf="@+id/switch4"
                android:layout_toStartOf="@+id/switch4"
                android:paddingRight="@dimen/_5sdp"
                android:text="Our bi-monthly email newsletter. We're always innovating, we'll be adding channels, services and offering exclusive content. Be the first to know!"
                android:textColor="#FF9B9B9B"
                android:textSize="@dimen/_9sdp"
                app:typeface="ProximaNova-Regular.otf" />


            <ToggleButton
                android:id="@+id/switch4"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/toggle_selector"
                android:checked="true"
                android:text=""
                android:textOff=""
                android:textOn="" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1AFFFFFF" />

        <com.costar.talkwithidol.ext.widgets.fonts.FontTextView
            android:id="@+id/tv_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="center"
            android:padding="@dimen/_6sdp"
            android:text="SAVE"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12sdp"
            app:typeface="ProximaNova-Regular.otf" />
    </LinearLayout>
</ScrollView>