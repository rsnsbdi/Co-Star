<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color">

    <LinearLayout
        android:id="@+id/blurrlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_170sdp"
            android:layout_height="@dimen/_170sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/premium_art" />

        <com.costar.talkwithidol.ext.widgets.fonts.FontTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_14sdp"
            app:typeface="ProximaNova-Regular.otf" />

        <com.costar.talkwithidol.ext.widgets.fonts.FontTextView

            android:id="@+id/tv_denied_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10sdp"
            app:typeface="ProximaNova-Regular.otf" />

        <com.costar.talkwithidol.ext.widgets.fonts.FontTextView

            android:id="@+id/link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10sdp"
            app:typeface="ProximaNova-Regular.otf" />

        <com.costar.talkwithidol.ext.widgets.fonts.ProxiBoldButton
            android:id="@+id/tellmemore"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/button_selector"
            android:enabled="true"
            android:text="Tell me more"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="@dimen/_12sdp"/>

        <com.costar.talkwithidol.ext.widgets.fonts.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:ellipsize="end"
            android:text="This will open a browser window outside of the app."
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10sdp"
            app:typeface="ProximaNova-Regular.otf" />


    </LinearLayout>


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/ic_close"
        android:backgroundTint="#FFF"
        android:padding="@dimen/_10sdp" />
</RelativeLayout>
