<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/main_color"
    android:layout_marginLeft="5dp"

    android:layout_marginTop="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp">

        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:scaleType="fitCenter"
            app:riv_corner_radius="5dp"
            app:riv_border_color="#333333"
            app:riv_mutate_background="true"
            app:riv_oval="false"
            android:id="@+id/event_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:layout_width="@dimen/_46sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:background="@drawable/eventup_selector"
            android:orientation="vertical"
            android:weightSum="1">



            <com.costar.talkwithidol.ext.widgets.fonts.FontTextView
                app:typeface="ProximaNova-Regular.otf"
                android:id="@+id/event_date"
                android:text="32"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_24sdp"
                android:layout_gravity="center"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content"
                android:layout_weight="1.21" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/_6sdp"
                android:layout_marginRight="@dimen/_6sdp"
                android:background="@android:color/white"

                />

            <com.costar.talkwithidol.ext.widgets.fonts.FontTextView
                app:typeface="ProximaNova-Regular.otf"
                android:id="@+id/event_month_year"
                android:text="DEC 2017"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_1sdp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_8sdp"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="wrap_content" />

            <com.costar.talkwithidol.ext.widgets.fonts.FontTextView
                app:typeface="ProximaNova-Regular.otf"
                android:id="@+id/event_time"
                android:text="12:56 Pm"
                android:padding="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:gravity="center_horizontal"
                android:background="@drawable/eventdown_selector"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_8sdp"
                android:layout_width="@dimen/_46sdp"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"

            android:layout_marginBottom="@dimen/_5sdp"

            android:layout_height="wrap_content">

            <com.costar.talkwithidol.ext.widgets.fonts.FontTextView
                android:layout_marginLeft="@dimen/_16sdp"
                app:typeface="ProximaNova-Regular.otf"
                android:id="@+id/event_title"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/image_detail"
                android:padding="@dimen/_6sdp"
                android:text="Josh Addo-Carr talks liveSeptember"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
               android:layout_marginRight="@dimen/_10sdp"
                android:src="@drawable/ic_event_add_watchlist"

                android:tint="@android:color/white" />
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>