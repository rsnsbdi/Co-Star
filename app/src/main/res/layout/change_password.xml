<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/signup_gradient"

    >

    <RelativeLayout
        android:id="@+id/registerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_head"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"

        >

        <RelativeLayout
            android:id="@+id/rl_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobileno"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="18dp">

            <com.costar.talkwithidol.ext.widgets.fonts.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:hint="Change Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="@dimen/_12sdp"
                android:textColor="#FFF"
                android:textColorHint="#FFF"
                android:textSize="@dimen/_12sdp"
                app:typeface="ProximaNova-Regular.otf" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_dob"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp">

            <com.costar.talkwithidol.ext.widgets.fonts.FontEditText
                android:id="@+id/old_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/rounded_corner_edittext"
                android:gravity="center_horizontal"
                android:hint="Old Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="@dimen/_12sdp"
                android:textColor="#FFF"
                android:textColorHint="#FFF"
                android:textSize="@dimen/_12sdp"
                app:typeface="ProximaNova-Regular.otf" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_email"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="28dp">

            <com.costar.talkwithidol.ext.widgets.fonts.FontEditText
                android:id="@+id/new_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/rounded_corner_edittext"
                android:gravity="center_horizontal"
                android:hint="New Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="@dimen/_12sdp"
                android:textColor="#FFF"
                android:textColorHint="#FFF"
                android:textSize="@dimen/_12sdp"
                app:typeface="ProximaNova-Regular.otf" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_confirmpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_password"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="28dp">

            <com.costar.talkwithidol.ext.widgets.fonts.FontEditText
                android:id="@+id/confirm_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/rounded_corner_edittext"
                android:gravity="center_horizontal"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="@dimen/_12sdp"
                android:textColor="#FFF"
                android:textColorHint="#FFF"
                android:textSize="@dimen/_12sdp"
                app:typeface="ProximaNova-Regular.otf" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_confirmpassword"
            android:layout_marginBottom="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="28dp">


            <com.costar.talkwithidol.ext.widgets.fonts.ProxiBoldButton
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/button_selector"
                android:shadowRadius="3"
                android:text="SUBMIT"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"

                />

        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_20sdp"
        android:backgroundTint="#FFF"
        android:background="@drawable/ic_close"
        android:padding="@dimen/_10sdp" />

</RelativeLayout>
