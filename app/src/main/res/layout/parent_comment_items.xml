<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp">


        <RelativeLayout
            android:id="@+id/rv_profile1"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginLeft="@dimen/_5sdp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/parent_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/_3sdp"
                android:gravity="center_horizontal"
                android:scaleType="fitCenter"
                app:riv_oval="true"

                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/rv_profile1"
            android:layout_height="wrap_content">

            <com.costar.talkwithidol.ext.widgets.fonts.FontTextView
                android:id="@+id/tv_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Kishor Maharjan"
                android:textColor="@android:color/white"
                app:typeface="ProximaNova-Regular.otf" />

            <com.costar.talkwithidol.ext.widgets.fonts.FontTextView
                android:id="@+id/tv_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name1"
                android:layout_marginLeft="@dimen/_5sdp"

                android:text="17 Oct 2017"
                android:textColor="#FF9B9B9B"
                android:textSize="@dimen/_8sdp"
                app:typeface="ProximaNova-Regular.otf" />


            <com.costar.talkwithidol.ext.widgets.fonts.FontTextView
                android:id="@+id/tv_user_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_date_time"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Rhoncus tristique cursus tempor: Litora class hendrerit, quis blandit quis mauris senectus metus vivamus: Nulla fames condimentum nostra cras ligula? Est tristique elit venenatis natoque velit morbi? Magna suscipit orci montes ut enim!"
                android:textColor="#FF9B9B9B"
                android:textSize="@dimen/_9sdp"
                app:typeface="ProximaNova-Regular.otf" />


            <com.costar.talkwithidol.ext.widgets.fonts.ProxiBoldButton
                android:id="@+id/btn_reply"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@+id/tv_user_comment"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/reply_button_selector"
                android:text="reply"
                android:textColor="@color/red1" />

            <com.costar.talkwithidol.ext.widgets.fonts.ProxiBoldButton
                android:id="@+id/btn_viewall"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@+id/tv_user_comment"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_toRightOf="@+id/btn_reply"
                android:background="@drawable/reply_button_selector"
                android:text="View all"
                android:textColor="@color/red1" />


            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/btn_reply"
                android:layout_margin="@dimen/_5sdp"
                android:background="#33E3E3E3" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/child1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/parent"
            android:layout_toRightOf="@+id/rv_profile1"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/rv_profile11"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginLeft="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/iv_rep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_reply" />

                <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/iv_profile11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/_3sdp"
                    android:layout_toRightOf="@+id/iv_rep"
                    android:gravity="center_horizontal"
                    android:scaleType="fitCenter"
                    app:riv_oval="true"

                    />
            </RelativeLayout>


            <com.costar.talkwithidol.ext.widgets.fonts.FontTextView
                android:id="@+id/tv_name11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toRightOf="@+id/rv_profile11"
                android:text="Kishor Maharjan"
                android:textColor="@android:color/white"
                app:typeface="ProximaNova-Regular.otf" />

            <com.costar.talkwithidol.ext.widgets.fonts.FontTextView
                android:id="@+id/tv_date_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name11"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toRightOf="@+id/rv_profile11"
                android:text="17 Oct 2017"
                android:textColor="#FF9B9B9B"
                android:textSize="@dimen/_8sdp"
                app:typeface="ProximaNova-Regular.otf" />


            <com.costar.talkwithidol.ext.widgets.fonts.FontTextView
                android:id="@+id/tv_user_comment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_date_time1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toRightOf="@+id/rv_profile11"
                android:text="Rhoncus tristique cursus tempor: Litora class hendrerit, quis blandit quis mauris senectus metus vivamus: Nulla fames condimentum nostra cras ligula? Est tristique elit venenatis natoque velit morbi? Magna suscipit orci montes ut enim!"
                android:textColor="#FF9B9B9B"
                android:textSize="@dimen/_9sdp"
                app:typeface="ProximaNova-Regular.otf" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/child2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/child1"
            android:layout_toRightOf="@+id/rv_profile1"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/rv_profile2"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginLeft="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/iv_rep2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_reply" />

                <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/iv_profile1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/_3sdp"
                    android:layout_toRightOf="@+id/iv_rep2"
                    android:gravity="center_horizontal"
                    android:scaleType="fitCenter"
                    app:riv_oval="true"

                    />
            </RelativeLayout>


            <com.costar.talkwithidol.ext.widgets.fonts.FontTextView
                android:id="@+id/tv_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toRightOf="@+id/rv_profile2"
                android:text="Kishor Maharjan"
                android:textColor="@android:color/white"
                app:typeface="ProximaNova-Regular.otf" />

            <com.costar.talkwithidol.ext.widgets.fonts.FontTextView
                android:id="@+id/tv_date_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name2"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toRightOf="@+id/rv_profile2"
                android:text="17 Oct 2017"
                android:textColor="#FF9B9B9B"
                android:textSize="@dimen/_8sdp"
                app:typeface="ProximaNova-Regular.otf" />


            <com.costar.talkwithidol.ext.widgets.fonts.FontTextView
                android:id="@+id/tv_user_comment2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_date_time2"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toRightOf="@+id/rv_profile2"
                android:text="Rhoncus tristique cursus tempor: Litora class hendrerit, quis blandit quis mauris senectus metus vivamus: Nulla fames condimentum nostra cras ligula? Est tristique elit venenatis natoque velit morbi? Magna suscipit orci montes ut enim!"
                android:textColor="#FF9B9B9B"
                android:textSize="@dimen/_9sdp"
                app:typeface="ProximaNova-Regular.otf" />


        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>