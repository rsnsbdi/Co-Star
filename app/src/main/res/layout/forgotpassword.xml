<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/signup_gradient"

    >

    <RelativeLayout
        android:layout_below="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"

        >
        <RelativeLayout
            android:id="@+id/rl_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/mobileno"
            >
            <com.costar.talkwithidol.ext.widgets.fonts.FontTextView
                app:typeface="ProximaNova-Regular.otf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:textColorHint="#FFF"
                android:gravity="center_horizontal"
                android:hint="Forgot password?"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="@dimen/_12sdp"
                android:textSize="@dimen/_12sdp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"

            android:layout_below="@+id/rl_dob"
            >
            <com.costar.talkwithidol.ext.widgets.fonts.FontEditText
                app:typeface="ProximaNova-Regular.otf"
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:textColor="#FFF"
                android:textColorHint="#FFF"
                android:background="@drawable/rounded_corner_edittext"
                android:gravity="center_horizontal"
                android:hint="PHONE/EMAIL"
                android:inputType="text"
                android:maxLines="1"
                android:padding="@dimen/_12sdp"
                android:textSize="@dimen/_12sdp"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="28dp"
            android:layout_below="@+id/rl_code">


            <com.costar.talkwithidol.ext.widgets.fonts.ProxiBoldButton
                android:id="@+id/reset"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/button_selector"
                android:shadowRadius="3"
                android:textColor="#FFF"
                android:textSize="@dimen/_12sdp"
                android:text="RESET PASSWORD"
                android:textAllCaps="false"

                />

        </RelativeLayout>

    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/_10sdp"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/ic_close" />

</RelativeLayout>
